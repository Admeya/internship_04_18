<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <property name="ref_author" value="ie.bykova@i-teco.ru"/>

    <changeSet id="createView-09042018-01" author="${ref_author}">
        <comment>Создание view для актуальных документов</comment>
        <createView replaceIfExists="true"
                    viewName="v_actual_documents">select * from documents doc where now()::date between doc.date_start::date and doc.date_end::date</createView>
    </changeSet>
</databaseChangeLog>